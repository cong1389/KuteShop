@using App.Domain.Common
@using App.Framework.Ultis
@using Resources
@using App.Service.Language
@model App.Domain.Orders.OrderViewModel

<div class="form-horizontal">
    <div class="form-body">
        <div class="tabbable-line">
            <ul class="nav nav-tabs ">
                <li class="active">
                    <a href="#tab_1" data-toggle="tab">Thông tin</a>
                </li>
                <li class="hidden">
                    <a href="#tab_2" data-toggle="tab">Thuộc tính sản phẩm</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="portlet yellow-crusta box">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-cogs"></i>Order Details
                                    </div>
                                    <div class="actions hidden">
                                        <a href="javascript:;" class="btn btn-default btn-sm">
                                            <i class="fa fa-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Order #: </div>
                                        <div class="col-md-7 value">
                                            @Model.Id
                                            <span class="label label-info label-sm hidden"> Email confirmation was sent </span>
                                        </div>
                                    </div>
                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Order Status </div>
                                        <div class="col-md-7 value">
                                            <span class="label label-success">@string.Format("{0: dd/MM/yyyy hh:mm:ss}", Model.OrderStatus)</span>
                                        </div>
                                    </div>

                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Payment method: </div>
                                        <div class="col-md-7 value"> @Model.PaymentMethodAdditionalFeeInclTax </div>
                                    </div>
                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Payment status: </div>
                                        <div class="col-md-7 value"> @Model.PaymentStatus </div>
                                    </div>
                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Create Date & time: </div>
                                        <div class="col-md-7 value">
                                            @string.Format("{0: dd/MM/yyyy hh:mm:ss}", Model.CreatedOnUtc)
                                        </div>
                                    </div>
                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Update Date & time: </div>
                                        <div class="col-md-7 value">
                                            @string.Format("{0: dd/MM/yyyy hh:mm:ss}", Model.UpdatedOnUtc)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="portlet blue-hoki box">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-cogs"></i>Customer Information
                                    </div>
                                    <div class="actions hidden">
                                        <a href="javascript:;" class="btn btn-default btn-sm">
                                            <i class="fa fa-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Customer Name: </div>
                                        <div class="col-md-7 value"> @Model.CustomerName </div>
                                    </div>
                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Email: </div>
                                        <div class="col-md-7 value"> @Model.CustomerEmail </div>
                                    </div>
                                    <div class="row static-info">
                                        <div class="col-md-5 name"> Order Total: </div>
                                        <div class="col-md-7 value"> @string.Format("{0:##,### VNĐ}", Model.OrderTotal)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="portlet green-meadow box">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-cogs"></i>Billing Address
                                    </div>
                                    <div class="actions hidden">
                                        <a href="javascript:;" class="btn btn-default btn-sm">
                                            <i class="fa fa-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    @if (Model.CustomerName != null)
                                    {
                                        <div class="row static-info">
                                            <div class="col-md-5 name"> Customer Name: </div>
                                            <div class="col-md-7 value"> @Model.CustomerName </div>
                                        </div>
                                    }
                                    @if (Model.CustomerEmail != null)
                                    {
                                        <div class="row static-info">
                                            <div class="col-md-5 name"> Email: </div>
                                            <div class="col-md-7 value"> @Model.CustomerEmail </div>
                                        </div>
                                    }
                                    @if (Model.BillingAddress.PhoneNumber != null)
                                    {
                                        <div class="row static-info">
                                            <div class="col-md-5 name"> Phone: </div>
                                            <div class="col-md-7 value"> @Model.BillingAddress.PhoneNumber</div>
                                        </div>
                                    }
                                    @if (Model.BillingAddress.Address1 != null)
                                    {
                                        <div class="row static-info">
                                            <div class="col-md-5 name"> Address: </div>
                                            <div class="col-md-7 value"> @Model.BillingAddress.Address1</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="portlet red-sunglo box">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-cogs"></i>Shipping Address
                                    </div>
                                    <div class="actions hidden">
                                        <a href="javascript:;" class="btn btn-default btn-sm">
                                            <i class="fa fa-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    @if (Model.ShippingMethod != null)
                                    {
                                        <div class="row static-info">
                                            <div class="col-md-5 name"> Shipping Method: </div>
                                            <div class="col-md-7 value"> @Model.ShippingMethod </div>
                                        </div>
                                    }
                                    @if (Model.ShippingStatus != null)
                                    {
                                        <div class="row static-info">
                                            <div class="col-md-5 name"> Shipping status: </div>
                                            <div class="col-md-7 value"> @Model.ShippingStatus </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>                    

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="portlet grey-cascade box">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-cogs"></i>Shopping Cart
                                    </div>
                                    <div class="actions">
                                        <a href="javascript:;" class="btn btn-default btn-sm">
                                            <i class="fa fa-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th> Product </th>                                                                                                
                                                    <th> Price </th>
                                                    <th> Quantity </th>                                                   
                                                    <th> Discount Amount </th>
                                                    <th> Total </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Items)
                                                {
                                                <tr>
                                                    <td>
                                                        <a href="javascript:;"> @item.PostName </a>
                                                    </td>                                                                                                      
                                                    <td> @item.UnitPriceInclTax </td>
                                                    <td> @item.Quantity </td>
                                                   
                                                    <td> 0</td>
                                                    <td> @item.SubTotalInclTax</td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6"> </div>
                        <div class="col-md-6">
                            <div class="well">
                                <div class="row static-info align-reverse">
                                    <div class="col-md-8 name"> Sub Total: </div>
                                    <div class="col-md-3 value"> @string.Format("{0:##,### VNĐ}", Model.OrderTotal)</div>
                                </div>
                                <div class="row static-info align-reverse">
                                    <div class="col-md-8 name"> Shipping: </div>
                                    <div class="col-md-3 value"> 0 </div>
                                </div>
                              
                                <div class="row static-info align-reverse">
                                    <div class="col-md-8 name"> Total Due: </div>
                                    <div class="col-md-3 value">  @string.Format("{0:##,### VNĐ}", Model.OrderTotal) </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="tab-pane hidden" id="tab_2">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-offset-3" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "help-block" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CustomerId, new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(model => model.CustomerId, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "help-block" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>
</div>



<!---/_CreateOrUpdate--->