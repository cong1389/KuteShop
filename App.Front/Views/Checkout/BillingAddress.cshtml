}

@section jquerys{
	<script src="~/Scripts/jquery.validate.js"></script>
}

<script>
	jQuery(function () {

		jQuery.post('@Url.Action("CartByCustomer", "Checkout")')
           .done(function (data) {
           		jQuery("#divCart").html(data.list);
           });
	})

</script>

