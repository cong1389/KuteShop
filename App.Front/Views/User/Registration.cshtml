<!---Registration-->
@using App.Aplication.Extensions
@model App.FakeEntity.User.RegisterFormViewModel

<div class="columns-container">
    <div class="container reg-shop" id="columns">
        <div class="row clearfix">
            <div id="layout-page" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                <span class="header-contact header-page clearfix text-center">
                    <h1>Tạo tài khoản</h1>
                </span>
                <div class="userbox">
                    @using (Html.BeginForm("Registration", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-offset-3" })
                        @Html.AntiForgeryToken()

                        <div id="last_name" class="clearfix large_form">
                            @Html.LabelFor(mode => mode.UserName, new { @class = "label icon-field" })
                            @Html.TextBoxFor(mode => mode.UserName, new { required = true, @class = "text", placeholder = Html.DisplayPlaceHolderFor(m => m.UserName) })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "required require_symbol" })
                        </div>

                        <div id="last_name" class="clearfix large_form">
                            @Html.LabelFor(mode => mode.LastName, new { @class = "label icon-field" })
                            @Html.TextBoxFor(mode => mode.LastName, new { required = true, @class = "text", placeholder = Html.DisplayPlaceHolderFor(m => m.LastName) })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "required require_symbol" })
                        </div>

                        <div id="last_name" class="clearfix large_form">
                            @Html.LabelFor(mode => mode.FirstName, new { @class = "label icon-field" })
                            @Html.TextBoxFor(mode => mode.FirstName, new { required = true, @class = "text", placeholder = Html.DisplayPlaceHolderFor(m => m.FirstName) })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "required require_symbol" })
                        </div>

                        <div id="last_name" class="clearfix large_form">
                            @Html.LabelFor(mode => mode.Email, new { @class = "label icon-field" })
                            @Html.TextBoxFor(mode => mode.Email, new { type = "email", required = true, @class = "text", placeholder = Html.DisplayPlaceHolderFor(m => m.Email) })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "required require_symbol" })
                        </div>

                        <div id="last_name" class="clearfix large_form">
                            @Html.LabelFor(mode => mode.Password, new { @class = "label icon-field" })
                            @Html.TextBoxFor(mode => mode.Password, new { type = "password", required = true, @class = "password text", placeholder = Html.DisplayPlaceHolderFor(m => m.Password) })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "required require_symbol" })
                        </div>

                        <div id="last_name" class="clearfix large_form">
                            @Html.LabelFor(mode => mode.ConfirmPassword, new { @class = "label icon-field" })
                            @Html.TextBoxFor(mode => mode.ConfirmPassword, new { type = "password", required = true, @class = "password text", placeholder = Html.DisplayPlaceHolderFor(m => m.ConfirmPassword) })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "required require_symbol" })
                        </div>

                        <div class="action_bottom">
                            <input class="btn" type="submit" value="Đăng ký">
                        </div>
                        <div class="req_pass">
                            <a class="come-back" href="@Url.Action("Login", "User", new { area = "" })">Quay về</a>
                        </div>
                    }

                </div>

            </div><!-- #register -->
        </div>
    </div>
</div>

