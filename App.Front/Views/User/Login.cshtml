<!---Login-->
@model App.FakeEntity.User.RegisterFormViewModel

<section id="content">
    <div class="container clearfix">
        <div class="accordion accordion-md divcenter nobottommargin clearfix" style="max-width: 550px;">

            <!-- login -->
            <div id="login">
                <div class="acctitle"><i class="acc-closed fa fa-lock"></i><i class="acc-open fa fa-unlock"></i>Đăng nhập</div>
                <div class="acc_content clearfix">
                    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-offset-3" })
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(mode => mode.UserName)<span class="required require_symbol">*</span>
                            @Html.TextBoxFor(mode => mode.UserName, new { @required = true, @class = "input-sm form-control" })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "required require_symbol" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(mode => mode.Password)<span class="required require_symbol">*</span>
                            @Html.PasswordFor(mode => mode.Password, new { @required = true, @class = "input-sm form-control" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "required require_symbol" })
                        </div>

                        <div class="form-group nobottommargin">
                            <button class="button button-black nomargin" id="login-form-submit" name="login-form-submit" type="submit" value="login">Đăng nhập</button>
                            <div class="fright text-right">
                                <a href="#" style="display:block;" onclick="showRecoverPasswordForm();return false;">Quên mật khẩu?</a>
                                <a href="/account/register" style="display:block;">Chưa có tài khoản? Đăng ký</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- end login -->
            <!-- forgot password -->
            <div id="recover-password" style="display:none;" class="userbox">
                <div class="acctitle"><i class="fa fa-refresh"></i>Quên mật khẩu</div>
                <div class="">
                    <form accept-charset="UTF-8" action="/account/recover" class="form-horizontal form-without-legend nobottommargin" method="post" _lpchecked="1" role="form">
                        <input name="form_type" type="hidden" value="recover_customer_password">
                        <input name="utf8" type="hidden" value="✓">
                        <div class="col_full">
                            <label for="recover-email">Email:</label>
                            <input type="text" id="recover-email" name="email" value="" class="input-sm form-control">
                        </div>

                        <div class="col_full nobottommargin">
                            <button class="button button-black nomargin" type="submit">Gửi</button>
                            <button class="button button-red nomargin" onclick="hideRecoverPasswordForm(); return false;" name="">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end forgot password -->

            <script src="//multiapp.haravan.com/social-login/script/mazzola.js?width=350&amp;height=160"></script><iframe src="//multiapp.haravan.com/social-login/customer/login.html?origin=mazzola" width="350" height="160" style="border:none;"></iframe>
        </div>
        <script>
            function showRecoverPasswordForm() {
                document.getElementById('recover-password').style.display = 'block';
                document.getElementById('login').style.display = 'none';
            }

            function hideRecoverPasswordForm() {
                document.getElementById('recover-password').style.display = 'none';
                document.getElementById('login').style.display = 'block';
            }
            if (window.location.hash == '#recover') { showRecoverPasswordForm() }
        </script>
    </div>
    <!-- #content end -->
</section>

<!---/Login-->
