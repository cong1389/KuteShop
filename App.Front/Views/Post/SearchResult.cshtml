@model IEnumerable<App.Domain.Entities.Data.Post>

<div class="columns-container">
    <div class="page-content page-order checkout-page" id="columns">
        <div class="container clearfix">
            <!-- row -->
            <div class="row">
                <div class="column col-xs-12 col-sm-3" id="left_column">
                    @{
                        Html.RenderAction("PostHot", "Post");
                        Html.RenderAction("PostDiscountBlock", "Post");
                    }
                </div>

                <div class="center_column col-xs-12 col-sm-9 product-col" id="center_column">
                    <div class="heading-counter warning">
                        Kết quả tìm kiếm có   <strong>@Model.Count()</strong>  sản phẩm

                    </div>
                    <div id="view-product-list" class="view-product-list">
                        <div class="page-content page-order">
                            @Html.Partial("_PostByCategory.Post", Model)
                        </div>

                    </div>
                </div>
            </div>
            <!-- ./row-->
        </div>
    </div>

</div>
<!----/SearchResult-->