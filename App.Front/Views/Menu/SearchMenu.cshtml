@model App.Front.Models.SeachConditions

<div class="advanced-search advance-search-header houzez-adv-price-range" data-sticky="1">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                @using (Html.BeginForm("Search", "Menu", FormMethod.Get))
                {
                    <div class="form-group search-long">

                        <div class="search">
                            <div class="input-search input-icon">
                                @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control", @placeholder = T("Search.PlaceHolder") })
                                @*<input class="form-control" type="text" value="@Model.Keywords" name="keyword" placeholder="Enter keyword...">*@
                                <div id="auto_complete_ajax" class="auto-complete"></div>
                            </div>

                        </div>
                        <div class="search-btn">
                            <button class="btn btn-secondary">Go</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!--/SearchMenu-->