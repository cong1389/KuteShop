@model App.FakeEntity.Orders.OrderViewModel

<section id="content" class="goweb-order-detail">
    <div class="container clearfix">
        <h1 class="title-page"><i class="icon-aothun"></i>Tài khoản của bạn</h1>
        <h3 class="checkout-sep">1. Checkout Method</h3>
        <div class="col-xs-12 col-sm-8">
            <div class="row">
                
                <table class="table table-bordered cart cart_summary">
                    <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng cộng</th>
                    </tr>
                    </thead>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                <a href="#" title="">@item.PostName </a><br>

                            </td>
                            <td>@item.UnitPriceInclTax</td>
                            <td> @item.Quantity</td>
                            <td>@item.SubTotalInclTax</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="col-xs-12 col-sm-4">
            @if (Model != null)
            {
                <h4>ĐỊA CHỈ NGƯỜI NHẬN</h4>
                <div class="account-detail user_box">
                    <div class="content-box-row">
                        <div class="fieldset">
                            @Model.CustomerName
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!---/Details--->