<!---GetTopHead-->
@model IEnumerable<App.FakeEntity.Menu.MenuNavViewModel>

<div class="top-header">
    <div class="container">

        @if (Model != null)
        {
            <div class="nav-top-links">
                @foreach (var lv1 in Model)
                {
                    <a class="first-item" href="@Url.Action("GetContent", "Menu", new { menu = lv1.SeoUrl, area = "" })">
                        <img alt="@lv1.MenuName" src="@Url.Content("~/"+lv1.IconNav)" />@lv1.MenuName
                    </a>
                }
            </div>
        }

        <div id="user-info-top" class="user-info pull-right">
            <div class="dropdown">
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Xin chào @HttpContext.Current.User.Identity.Name</span></a>
                    <ul class="dropdown-menu mega_dropdown" role="menu">
                        <li><a href='@Url.Action("ChangeInfo", "Account", new {area = ""})'>Đơn hàng của tôi</a></li>
                        <li><a href='@Url.Action("LogOff", "Account", new {area = ""})'>Đăng xuất</a></li>
                    </ul>
                }
                else
                {
                    <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Đăng nhập tài khoản</span></a>
                    <ul class="dropdown-menu mega_dropdown" role="menu">
                        <li><a href='@Url.Action("Login", "User", new {area = ""})'>Đăng nhập</a></li>
                        <li><a href='@Url.Action("Registration", "User", new {area = ""})'>Đăng ký</a></li>
                    </ul>

                }
            </div>
        </div>
    </div>
</div>
<!---/GetTopHead-->