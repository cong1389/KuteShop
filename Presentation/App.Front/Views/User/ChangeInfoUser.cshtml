
@using App.Aplication.Extensions
@model App.FakeEntity.User.RegisterFormViewModel

@{
    Layout = "~/Views/Shared/_MyAccount.cshtml";
    ViewBag.Title = "Thông tin tài khoản";
}

@if (Model != null)
{
    <h2 class="page-heading">
        <span class="page-heading-title2">@ViewBag.Title</span>
    </h2>
    <div class="box-authentication box-wishlist">
        @using (Html.BeginForm("ChangeInfoUser", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-offset-3" })
            @Html.AntiForgeryToken()
            <ul>
                <li>
                    @if (Model.UserName != null)
                    {
                        @Html.LabelFor(mode => mode.UserName)
                        @Html.TextBoxFor(mode => mode.UserName, new { type = "text", required = true, @class = "form-control", placeholder = Html.DisplayPlaceHolderFor(m => m.UserName) })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "required require_symbol" })
                    }
                </li>
                <li>
                    @if (Model.Email != null)
                    {
                        @Html.LabelFor(mode => mode.Email)
                        @Html.TextBoxFor(mode => mode.Email, new { type = "email", required = true, @class = "form-control", placeholder = Html.DisplayPlaceHolderFor(m => m.Email) })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "required require_symbol" })
                    }
                </li>
                <li>
                    @if (Model.Address != null)
                    {
                        @Html.LabelFor(mode => mode.Address)
                        @Html.TextBoxFor(mode => mode.Address, new { type = "text", required = true, @class = "form-control", placeholder = Html.DisplayPlaceHolderFor(m => m.Address) })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "required require_symbol" })
                    }
                </li>
                <li>
                    @if (Model.Phone != null)
                    {
                        @Html.LabelFor(mode => mode.Phone)
                        @Html.TextBoxFor(mode => mode.Phone, new { type = "text", required = true, @class = "form-control", placeholder = Html.DisplayPlaceHolderFor(m => m.Phone) })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "required require_symbol" })
                    }
                </li>
                <li> <button class="button" type="submit"><i class="fa fa-lock"></i>Lưu</button></li>
            </ul>

        }
    </div>
}