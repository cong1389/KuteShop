@using App.Framework.Utilities
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title </title>
    <meta name="keywords" content="@ViewBag.KeyWords" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="generator" content="" />
    <link rel="canonical" href="@Html.Raw(Request.Url.AbsoluteUri)" />
    <link rel="alternate" hreflang="vi_vn" href="@ViewBag.SiteUrl" />
    <meta name="robots" content="index, follow, noodp" />
    <meta name="googlebot" content="index,archive,follow,noodp" />
    <meta name="msnbot" content="all,index,follow" />
    <meta name="copyright" content="@ExtentionUtils.CurrentHost" />
    <meta property="og:locale" content="vi_VN">
    <meta property="og:site_name" content="@ViewBag.Title" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:description" content="@ViewBag.Description" />

    <!-- You can use Open Graph tags to customize link previews.-->
    <meta property="og:url" content="@(string.Concat(ExtentionUtils.CurrentHost,ViewBag.Image))">
    <meta property="og:type" content="website" />
    <meta property="og:image" content="@(string.Concat(ExtentionUtils.CurrentHost,ViewBag.Image))" />
    <link href="@ViewBag.Favicon" rel="shortcut icon" type="image/x-icon" />

    @{Html.RenderAction("GetMeta", "Summary"); }
    @{Html.RenderAction("GetMetaTagsSeo", "Summary");}

    @{Html.RenderPartial("_StyleSheet");}

    @RenderSection("renderStyles", false)

    <script type='text/javascript' src='/assets/wp-includes/js/jquery/jqueryb8ff.js?ver=1.12.4'></script>
    <script type='text/javascript' src='/assets/wp-includes/js/jquery/jquery-migrate.min330a.js?ver=1.4.1'></script>
    <script type='text/javascript' src='/assets/wp-content/plugins/revslider/public/assets/js/jquery.themepunch.tools.minc6ac.js?ver=5.1.5'></script>
    <script type='text/javascript' src='/assets/wp-content/plugins/revslider/public/assets/js/jquery.themepunch.revolution.minc6ac.js?ver=5.1.5'></script>
    <script type='text/javascript' src='http://maps.google.com/maps/api/js?key=AIzaSyBJZ78Ya3t6d7_WkNGz8OMb5uPCba1XpgU&amp;ver=4.5.9'></script>


</head>
<body class="home page page-id-14 page-template page-template-tpl-visual_composer page-template-tpl-visual_composer-php wpb-js-composer js-comp-ver-4.11.2.1 vc_responsive">

    <div class="page-wrapper">
        @{ Html.RenderAction("Header", "MenuNav", new { area = "" });}


        @RenderBody()

        @{Html.RenderAction("Footer", "Summary", new { area = "" }); }
    </div>

    <!--Scroll to top-->
    <div class="scroll-to-top scroll-to-target" data-target=".main-header"><span class="icon flaticon-tool-3"></span></div>


    @{Html.RenderPartial("_Scripts"); }

    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.10&appId=333261973802232";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>


    @*@RenderSection("renderJQuery", false)
        @RenderSection("renderScripts", false)*@
    @RenderSection("google", false)
    @RenderSection("facebook", false)

</body>
</html>
