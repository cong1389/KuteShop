@{
    Html.RenderAction("BannerTop", "Banner", new { menuId = ViewBag.MenuId, title = ViewBag.Title });
    Html.RenderPartial("_BreadCrumb");
    var contactInfo = (IEnumerable<ContactInformation>)ViewBag.Contact;

    <div class="vc_row wpb_row vc_row-fluid blog-page-body">
        <div class="wpb_column vc_column_container vc_col-sm-12">
            <div class="vc_column-inner ">
                <div class="wpb_wrapper">
                    <!--Contact Section-->
                    <section class="contact-section">
                        <!--Map Container-->
                        <div class="map-container">
                            <!--Map Canvas-->
                            <div class="map-canvas" data-zoom="12" data-lat="10.8678316" data-lng="106.6441058"
                                 data-type="roadmap" data-hue="#ffc400" data-title="Envato" data-content="@contactInfo.FirstOrDefault().Title<br>
    <a href='mailto:@contactInfo.FirstOrDefault().Email'>@contactInfo.FirstOrDefault().Email</a>"
                                 style="height: 100%;">
                            </div>

                        </div>

                        <div class="auto-container">
                            <!--Comment Form-->
                            <div class="contact-form-outer">
                                <div class="sidebar-title">
                                    <h3>Thông tin liên hệ</h3>
                                </div>

                                <div class="inner-box">
                                    <div role="form" class="wpcf7" id="wpcf7-f154-p12-o1" lang="en-US" dir="ltr">
                                        <div class="screen-reader-response"></div>
                                        @using (Html.BeginForm("SendContact", "Contact", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-send-Contact" }))
                                        {
                                            <div style="display: none;">
                                                <input type="hidden" name="_wpcf7" value="154" />
                                                <input type="hidden" name="_wpcf7_version" value="4.4.1" />
                                                <input type="hidden" name="_wpcf7_locale" value="en_US" />
                                                <input type="hidden" name="_wpcf7_unit_tag" value="wpcf7-f154-p12-o1" />
                                                <input type="hidden" name="_wpnonce" value="7952634abf" />
                                            </div>
                                            <div id="contact-form">
                                                <div class="row clearfix">
                                                    <div class="form-group col-lg-6 col-md-6 col-xs-12">
                                                        <span class="wpcf7-form-control-wrap text-142">
                                                            @Html.TextBoxFor(model => model.FullName, new { @class = "wpcf7-form-control wpcf7-text wpcf7-validates-as-required",
                                                                required = true, autocapitalize = "words", placeholder = Html.DisplayPlaceHolderFor(m => m.FullName) })

                                                        </span>
                                                    </div>
                                                    <div class="form-group col-lg-6 col-md-6 col-xs-12">
                                                        <span class="wpcf7-form-control-wrap email-800">
                                                            @Html.TextBoxFor(model => model.Email, new { @class = "wpcf7-form-control wpcf7-text wpcf7-email wpcf7-validates-as-required wpcf7-validates-as-email",
                                                           required = true, autocapitalize = "words",
                                                                placeholder = Html.DisplayPlaceHolderFor(m => m.Email) })
                                                        </span>
                                                    </div>
                                                    <div class="form-group col-lg-12 col-sm-12 col-xs-12">
                                                        <span class="wpcf7-form-control-wrap textarea-945">
                                                            @Html.TextAreaFor(model => model.Content, new { rows = "6",
                                                                @class = "wpcf7-form-control wpcf7-textarea", required = true, autocapitalize = "words", placeholder = Html.DisplayPlaceHolderFor(m => m.Content) })
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="text-left">
                                                    <button id="btn-send-contact" type="submit" class="wpcf7-form-control wpcf7-submit theme-btn btn-style-two construct-style">
                                                        <span class="icon icon-right flaticon-arrows-10"></span>
                                                        Gửi thông tin
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="wpcf7-response-output wpcf7-display-none"></div>

                                        }
                                    </div>
                                </div>

                                <div class="contact-info clearfix">
                                    <!--Info Box-->
                                    <div class="column info-box">
                                        <div class="icon-box"><span class="flaticon-location"></span></div>
                                        <ul>
                                            <li><span class="small-title">@T("Address.Lable")</span></li>
                                            <li><a href="Address:@contactInfo.FirstOrDefault().Address"><strong>@contactInfo.FirstOrDefault().Address</strong></a></li>
                                        </ul>
                                    </div>

                                    <!--Info Box-->
                                    <div class="column info-box">
                                        <div class="icon-box"><span class="flaticon-technology"></span></div>
                                        <ul>
                                            <li><span class="small-title">@T("DienThoai.Lable")</span></li>
                                            <li><a href="Tel:Model.MobilePhone"><strong>@contactInfo.FirstOrDefault().MobilePhone</strong></a></li>
                                        </ul>
                                    </div>

                                    <!--Info Box-->
                                    <div class="column info-box">
                                        <div class="icon-box"><span class="flaticon-note"></span></div>
                                        <ul>
                                            <li><span class="small-title">Email</span></li>
                                            <li><a href="@contactInfo.FirstOrDefault().Email"><strong>@contactInfo.FirstOrDefault().Email</strong></a></li>
                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </section>

                </div>
            </div>
        </div>
    </div>

