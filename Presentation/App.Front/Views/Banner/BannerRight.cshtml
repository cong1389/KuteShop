@using App.Core.Extensions
@using App.Framework.Utilities
@model IEnumerable<App.Domain.Ads.Banner>
@if (Model.IsAny())
{
    <div id="SiteLeft" style="display: none">
        <div class="ban_scroll" id="ban_left" style="width: 100px">
            <div class="item">
                @foreach (var item in Model)
                {
                    <a href="@item.WebsiteLink" rel="nofollow" target="@item.Target" style="width: 100px; display: none">
                        <img src="@item.ImgPath.ValidateImage()" alt="@item.Title" width="@item.Width" height="@item.Height"/>
                </a>
                }
            </div>
        </div>
    </div>
}
