<!---NewsHome--->
@using App.Core.Extensions
@using App.Framework.Utilities
@model IEnumerable<App.Domain.News.News>

@if (Model.IsAny())
{
    <div class="vc_row wpb_row vc_row-fluid">
        <div class="wpb_column vc_column_container vc_col-sm-12">
            <div class="vc_column-inner ">
                <div class="wpb_wrapper">


                    <!--Latest Work-->
                    <section class="latest-work">
                        <div class="auto-container">
                            <!--Section Title-->
                            <div class="sec-title text-center">
                                <h2>Tin <span class="theme_color">tức</span></h2>
                            </div>
                        </div>

                        <div class="carousel-outer">
                            <ul class="work-carousel">
                                <!--Slide Item-->
                                @foreach (var item in Model)
                                {
                                    <li class="slide-item">
                                        <div class="default-work-column">
                                            <div class="inner-box">
                                                <figure class="image-box">
                                                    <img width="350" height="322"
                                                         src="@item.ImageMediumSize.ValidateImage()"
                                                         class="img-responsive wp-post-image"
                                                         alt="@item.Title"
                                                         srcset="@item.ImageMediumSize.ValidateImage() 350w,
                                                    @item.ImageMediumSize.ValidateImage() 300w,
                                                     @item.ImageMediumSize.ValidateImage() 271w"
                                                         sizes="(max-width: 350px) 100vw, 350px" />
                                                </figure>
                                                <a href="@item.ImageMediumSize.ValidateImage()" class="lightbox-image overlay-link">
                                                    <span class="icon flaticon-cross"></span>
                                                </a>
                                                <div class="caption-layer">
                                                    <div class="upper">
                                                        <h3><a href="@Url.Action("NewsDetail", "News", new {seoUrl = item.SeoUrl, area = ""})">@item.Title</a></h3>
                                                        <div class="category"><a href="@Url.Action("NewsDetail", "News", new {seoUrl = item.SeoUrl, area = ""})">@T("Continus.Lable")</a></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }

                                

                            </ul>
                        </div>

                        <div class="text-center"><a href="#" class="more-link">See more works</a></div>

                    </section>

                </div>
            </div>
        </div>
    </div>

